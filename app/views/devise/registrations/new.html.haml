.contents.row
  = link_to image_tag("logo.png", class: "FURIMA-btn", alt: "サンプル画像"), root_path
  .container
    %h2 Sign up
    = form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|
      = devise_error_messages!
      .field 
        = f.label :nickname
        %em (6 characters maximum) 
        %br/
        = f.text_field :nickname, autofocus: true, maxlength: "6"
      .field
        %label.col-sm-2.control-label
          名前 (全角)
          %span.label.label-danger 
        .col-sm-10 
          %input.form-control{:autocomplete => "name", :name => "name", :placeholder => "名前", :required => "", :type => "text"}/
